{
  "extends": "../../config/tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": "./src",
    "paths": {
      "@gratia/kernel": ["./index"],
      "@gratia/kernel/types": ["./types"],
      "@gratia/kernel/config": ["./config"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
